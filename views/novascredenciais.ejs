<%- include('partials/head',{title:'BCU Cadastrar'})%>
<%- include('partials/header')%>
<section class="loginContainer">
        <form class="formContainer" id="loginForm">
            <div>
                <label for="nome">Nome</label>
                <input type="text" name="nome" id="nome" placeholder="Nome" required>
            </div>
            <div>
                <label for="email">Email</label>
                <input type="email" name="email" id="email" placeholder="Email" required>
            </div>
            <div>
                <label for="password">Senha</label>
                <input type="password" name="senha" id="password" placeholder="Senha" required>
            </div>
            <div>
                <label for="password">Confirm Senha</label>
                <input type="password" name="senha-confirma" id="passwordConfirm" placeholder="Repetir Senha" required>
            </div>
            <button type="submit" id="cadastrarBtn">Salvar</button>
        </form>
        <div class="infoContainer">
            <p class="info"></p>
        </div>   
    </section>
    <%- include('partials/footer')%>
    <%- include('partials/pageEnd')%>
